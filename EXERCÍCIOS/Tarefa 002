#include <stdio.h>
#include <stdlib.h>

int main(){
    int visitantes;
    
    printf("Digite o número de visitantes que entraram hoje: ");
        scanf("%i", &visitantes);
    printf("%i" " visitantes entraram no dia de hoje!");
}
//2)
#include <stdio.h>
#include <stdlib.h>

int main(){
    float receita, despesa, total;
    
    printf("Insira sua receita: ");
        scanf("%f", &receita);
    printf("Insira sua despesa: ");
        scanf("%f", &despesa);
    total = (receita - despesa);
    printf("Seu saldo no dia de hoje é de: %.lf\n", total);
    return (0);
}
